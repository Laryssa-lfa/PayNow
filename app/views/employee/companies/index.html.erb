<div class="container">
  <br>
  <div class="form-control">
    <% if @companies.empty? %>
      <h3>Nenhuma Empresa Disponível</h3>
    <% else %>
      <h3>Empresas Disponíveis</h3>
    <% end %>

    <% @companies.each do |company| %>
      <div class="d-inline-block">
        <div class="card text-center" style="width: 30rem;">
          <div class="card-body">
            <h4 class="card-title"><%= company.corporate_name %></h4>
            <%= link_to 'Renovar Token', new_token_employee_company_path(company), method: :put, class: "btn btn-dark btn-sm" %>
            <%= link_to 'Suspender', '#', class: "btn btn-dark btn-sm" %>
            <%= link_to 'Editar', edit_employee_company_path(company), class: "btn btn-dark btn-sm" %>
            <%= link_to 'Detalhes', employee_company_path(company), class: "btn btn-dark btn-sm" %>
            <br>
            <%= link_to 'Histórico de Alterações', controller: "employee/change_history_to_companies", query: "#{company.corporate_name}", class: "text-dark" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
