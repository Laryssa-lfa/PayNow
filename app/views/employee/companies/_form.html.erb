<div class="container">
  
  <% if company.errors.any? %>
    <div id = "error_explanation">
      <ul>
        <% company.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: [:employee, company], html: { class: 'form-control' } do |form| %>
    <div class="field">
      <%= form.label :corporate_name, 'Razão Social' %>
      <%= form.text_field :corporate_name %>
    </div>
    <div class="field">
      <%= form.label :cnpj, 'CNPJ' %>
      <%= form.text_field :cnpj %>
    </div>
    </div>
    <div class="field">
      <%= form.label :address, 'Endereço' %>
      <%= form.text_field :address %>
    </div>
    <div class="field">
      <%= form.label :email, 'E-mail' %>
      <%= form.text_field :email %>
    </div>

    <br>
    <%= form.submit button_text, class: "btn btn-dark" %>
  <% end %>
</div>
