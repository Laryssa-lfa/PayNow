<div class="container">
  <br>
  
  <% if current_client.admin? %>
    <div class="form-control">
      <h3>
        Perfil <small class="text-muted"><%= @company.corporate_name %></small>
      </h3>
      
      <dl class="row">
        <dt class="col-sm-3">CNPJ</dt>
        <dd class="col-sm-9"><%= @company.cnpj %></dd>

        <dt class="col-sm-3">Endere√ßo</dt>
        <dd class="col-sm-9"><%= @company.address %></dd>
        
        <dt class="col-sm-3">E-mail</dt>
        <dd class="col-sm-9"><%= @company.email %></dd>
        
        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9"><%= @company.view_status %></dd>
        
        <dt class="col-sm-3">Token</dt>
        <dd class="col-sm-9"><%= @company.token %></dd>
      </dl>
