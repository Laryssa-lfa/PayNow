<div class="container">
  
  <% if client.errors.any? %>
    <div id = "error_explanation">
      <ul>
        <% client.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: [:admin_client, client], html: { class: 'form-control' } do |form| %>
    <div class="field">
      <%= form.label :name, 'Nome' %>
      <%= form.text_field :name %>
    </div>
    <div class="field">
      <%= form.label :email, 'E-mail' %>
      <%= form.text_field :email %>
    </div>
    <div class="field">
      <%= form.label :password, 'Senha' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres m√≠nimos)</em>
      <% end %>
      <%= form.password_field :password %>
    </div>
    <br>
    <%= form.submit button_text, class: "btn btn-dark" %>
  <% end %>
</div>
